<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="PhonkAppRunnerTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:actionBarStyle">@style/PhonkAppRunnerTheme.ActionBarStyle</item>
        <item name="android:windowBackground">@color/phonk_backgroundColor</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="PhonkAppRunnerTheme" parent="PhonkAppRunnerTheme.Base">
        <item name="android:windowBackground">@color/phonk_backgroundColor</item>
        <!-- <item name="android:windowContentOverlay">@null</item> -->
        <item name="windowActionModeOverlay">true</item>

        <item name="colorPrimary">@color/green</item>
        <item name="colorAccent">@color/phonk_colorPrimary</item>
        <item name="colorPrimaryDark">#333333</item>

        <!--<item name="windowActionBar">false</item>-->
        <!--<item name="android:windowNoTitle">true</item>-->
        <!--<<item name="android:windowNoTitle">true</item>-->
        <!--<item name="android:listViewStyle">@getStyles/MyListView</item>-->
        <!--<item name="android:buttonStyle">@getStyles/ProtocoderAppRunner.Button</item>-->
        <!--<item name="android:textViewStyle">@getStyles/ProtocoderAppRunner.TextView</item>-->
        <!--<item name="android:seekBarStyle">@getStyles/ProtocoderAppRunner.SeekBar</item>-->
    </style>

    <!-- ProtocoderThemeApp -->
    <style name="PhonkAppRunnerTheme.Toolbar" parent="Theme.AppCompat.Light">
        <item name="android:actionBarStyle">@style/PhonkAppRunnerTheme.ActionBarStyle</item>
    </style>



    <style name="PhonkAppRunnerTheme.ActionBarStyle" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/primaryAccent</item>
        <item name="colorAccent">@color/black</item>
        <item name="android:selectableItemBackground">@drawable/actionbar_highlight</item>
        <item name="android:displayOptions">showHome|homeAsUp|showTitle</item>
        <item name="android:icon">@drawable/phonk_icon</item>

        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#55000000</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:background">#22000055</item>

    </style>

    <style name="PhonkAppRunner.Dialog" parent="Theme.AppCompat.Dialog">
        <item name="android:background">@color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>


</resources>
