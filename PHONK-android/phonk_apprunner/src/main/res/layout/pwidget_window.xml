<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="0dp"
    android:layout_marginTop="0dp"
    android:padding="0dp"
    android:background="@drawable/card_bg" >

    <RelativeLayout
        android:id="@+id/pWidgetWindowBar"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:id="@+id/pWidgetWindowTitle"
            android:layout_weight="0.54"
            android:paddingLeft="20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="x"
            android:background="@color/transparent"
            android:id="@+id/pWidgetWindowClose"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/pWidgetWindowMainContainer"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/pWidgetWindowBar"
        android:layout_alignStart="@+id/pWidgetWindowBar">


        </LinearLayout>

</RelativeLayout>