<selector xmlns:android="http://schemas.android.com/apk/res/android" >
     <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
             <corners android:radius="1dip" />
             <solid  android:color="#181818"/>       
             <stroke android:width="3dip" android:color="#CC181818" />
         </shape>
     </item>
    <item android:state_focused="true">
       <shape android:shape="rectangle"  >
             <corners android:radius="1dip" />
             <solid  android:color="#282828"/>       
             <stroke android:width="3dip" android:color="#CC282828" />
         </shape>
     </item>  
    <item >
        <shape android:shape="rectangle"  >
             <corners android:radius="1dip" />
             <solid  android:color="#181818"/>       
             <stroke android:width="3dip" android:color="#CC222222" />
         </shape>
     </item>
</selector>