<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <style name="AppDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Transparent" parent="Theme.AppCompat">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name = "textMenu">
        <item name = "android:background">@color/transparent</item>
        <item name = "android:gravity">left|center_vertical</item>
        <item name = "android:textColor">@color/white</item>
        <item name = "android:fontFamily">monospace</item>
        <item name = "android:textStyle">bold</item>
        <item name = "android:textAllCaps">false</item>
        <item name = "android:minHeight">0dp</item>
        <item name = "android:padding">5dp</item>
        <!-- <item name = "android:textSize">22sp</item>
        -->
    </style>

    <style name="PagerTitleStripText">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#a4c639</item>
        <item name="android:shadowColor">#44000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <style name="logo">
        <item name="android:fontFamily">sans-serif-condensed"</item>
        <item name="android:shadowColor">@color/blacktransparent20</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:text">phonk</item>
        <item name="android:textColor">@color/phonk_textColor_secondary</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="qq">
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:background">#00000088</item>
        <item name="android:textSize">12sp</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="editor">
        <item name="android:padding">12dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:textColor">@color/phonk_colorSecondary</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textSize">12sp</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:textStyle">bold</item>item>
    </style>

    <style name="DisableSoundEffects">
        <item name="android:soundEffectsEnabled">false</item>
    </style>


    <!-- toolbar -->
    <style name="ToolBarApp.Base" parent="">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="ToolBarApp.App" parent="ToolBarApp.Base">
        <item name="titleTextAppearance">@style/TextAppearance.Widget.Event.Toolbar.Title.App</item>
        <item name="actionMenuTextColor">#ff63BBF7</item>

        <item name="android:textColorPrimary">@color/phonk_colorPrimary</item>
        <item name="android:textColorSecondary">@color/phonk_colorSecondary</item>
    </style>

    <style name="TextAppearance.Widget.Event.Toolbar.Title.App" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <!--Any text styling can be done here-->
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/phonk_textColor_primary</item>
        <!-- <item name="android:fontFamily">monospace</item>
        <item name="android:textAllCaps">false</item> -->
    </style>

    <style name = "ToggleButton" parent = "Widget.AppCompat.Button">
        <item name = "android:textColor">@color/phonk_colorSecondary</item>
        <item name = "android:background">@drawable/gray_box_bg_transparent</item>
        <item name = "android:textSize">10sp</item>
        <item name = "android:gravity">center</item>
    </style>

    <style name="WelcomeTextTitle">
        <item name = "android:textColor">@color/primaryAccent</item>
        <item name = "android:layout_marginTop">12dp</item>
        <item name = "android:layout_marginBottom">6dp</item>
        <item name = "android:textSize">16sp</item>
        <item name = "android:fontFamily">@string/secondary_font</item>
    </style>

    <style name = "WelcomeText">
        <item name = "android:fontFamily">sans-serif</item>
        <item name = "android:maxWidth">400dp</item>
        <item name = "android:shadowColor">#55000000</item>
        <item name = "android:shadowDx">2</item>
        <item name = "android:shadowDy">2</item>
        <item name = "android:textColor">@color/white</item>
        <item name = "android:textSize">14sp</item>
    </style>

    <style name = "YellowButton" parent = "Widget.AppCompat.Button">
        <item name = "android:textColor">@color/phonk_colorPrimary</item>
        <item name = "android:background">@drawable/yellow_box_round</item>
        <item name = "android:fontFamily">sans-serif-medium</item>
        <item name = "android:gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name = "TransparentButton" parent = "Widget.AppCompat.Button">
        <item name = "android:textColor">@color/phonk_colorSecondary</item>
        <item name = "android:background">@color/transparent</item>
        <item name = "android:textSize">10sp</item>
        <item name = "android:gravity">center</item>
    </style>

</resources>
