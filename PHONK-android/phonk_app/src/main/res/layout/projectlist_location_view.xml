<!-- back & folder info -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/folderLocation"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:visibility="visible"
    android:paddingLeft="4dp"
    android:paddingTop="10dp"
    tools:showIn="@layout/projectlist_list">

    <ImageButton
        android:id="@+id/backToFolders"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter"
        android:padding="10dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_arrow_back_black_24dp" />

    <LinearLayout
        android:id="@+id/folderPath"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        >

        <TextView
            android:id="@+id/parentFolder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="folder"
            android:textStyle="bold"
            android:visibility="visible"
            android:fontFamily="@string/secondary_font"
            android:textColor="@color/phonk_colorPrimary" />

        <TextView
            android:id="@+id/separator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="/"
            android:textStyle="bold"
            android:fontFamily="@string/secondary_font"
            android:visibility="visible"
            android:textColor="@color/phonk_colorPrimary" />

        <TextView
            android:id="@+id/folder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="subfolder"
            android:textColor="@color/phonk_colorPrimary"
            android:textStyle="bold"
            android:fontFamily="@string/secondary_font"
            android:visibility="visible" />

    </LinearLayout>
</LinearLayout>

    