<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->

    <!-- Styler for the header of each license card -->
    <style name="LicenseCardTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/primaryAccent</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:padding">@dimen/license_card_title_padding</item>
    </style>

    <!-- Styler for the body of each license card -->
    <style name="LicenseCardBody">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/phonk_textColor_secondary</item>
        <item name="android:padding">@dimen/license_card_title_padding</item>
    </style>

</resources>
