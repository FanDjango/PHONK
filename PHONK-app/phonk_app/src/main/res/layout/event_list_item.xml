<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="6dp"
    android:background="?attr/selectableItemBackground"
    android:orientation="horizontal"
    android:paddingRight="0dp"
    android:paddingBottom="0dp">

    <TextView
        android:id="@+id/txtProjectName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/event_type"
        android:ellipsize="end"
        android:lines="1"
        android:maxLines="1"
        android:paddingLeft="8dp"
        android:paddingTop="3dp"
        android:paddingRight="8dp"
        android:paddingBottom="3dp"
        android:text="What"
        android:textAlignment="center"
        android:textColor="@color/phonk_textColor_secondary"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtEventDetail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:ellipsize="end"
        android:lines="1"
        android:maxLines="1"
        android:text="Detail"
        android:textAlignment="center"
        android:textColor="@color/phonk_textColor_secondary"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/txtProjectName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txtProjectName"
        app:layout_constraintTop_toTopOf="@+id/txtProjectName"
        app:layout_constraintVertical_bias="0.592" />

    <View
        android:id="@+id/view1"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:background="@drawable/event_type"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
