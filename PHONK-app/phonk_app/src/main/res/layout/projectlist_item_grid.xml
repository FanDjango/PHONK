<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="?attr/selectableItemBackground"
    android:layout_marginTop="6dp"
    android:paddingLeft="12dp"
    android:paddingRight="0dp"
    android:paddingBottom="0dp">

    <ImageView
        android:id="@+id/iconImg"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginTop="5dp"
        android:layout_centerVertical="true"
        android:visibility="gone"
        />
    <TextView
        android:id="@+id/folderIcon"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:gravity="center"
        android:text="Pr"
        android:textStyle="bold"
        android:textSize="22sp"
        android:textColor="@color/phonk_colorPrimary"
        android:background="@drawable/project_list_item_icon"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/txtProjectName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:lines="1"
        android:maxLines="1"
        android:paddingLeft="12dp"
        android:text="Title"
        android:textAlignment="center"
        android:textColor="@color/phonk_textColor_secondary"
        android:fontFamily="sans-serif-light"
        android:textSize="20sp"
        android:layout_below="@+id/folderIcon"
        android:layout_marginTop="14dp" />

    <View
        android:id="@+id/view1"
        android:layout_alignParentBottom="true"
        android:background="#00000000"
        android:layout_width="fill_parent"
        android:layout_height="1dp" />

    <ImageView
        android:id="@+id/card_menu_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:padding="12dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_more_vert_black_24dp"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:layout_below="@+id/folderIcon"
        android:layout_toRightOf="@+id/folderIcon"
        android:layout_toEndOf="@+id/folderIcon" />

</RelativeLayout>
